<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="15dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="183dp"
            android:text="Email"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editEmailRegister"
            android:layout_marginStart="73dp"
            android:layout_marginTop="85dp"
            android:text="Password"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editEmailRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignStart="@+id/editPasswordRegister"
            android:ems="10"
            android:hint="xyz@abc.com"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editPasswordRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/registerButton"
            android:layout_marginStart="42dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:text=""
            android:textSize="12sp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:text="Sign in"
            android:layout_below="@+id/editPasswordRegister"
            android:layout_alignStart="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="25sp"
            android:layout_marginStart="18dp"
            android:layout_above="@+id/editEmailRegister"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginBottom="65dp" />
    </RelativeLayout>
</LinearLayout>